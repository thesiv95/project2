header.header
    .header__top
        .container
            .header__left
                - var icons = ['fb', 'vk', 'tw']
                ul.socials
                    each icon in icons
                        li(class="socials__item socials__item_" + icon)
                            a(href="#").socials__link
                                .socials__icon
            .header__right
                .address ул. Маяковского 6, офис 17
                a(href="tel:+79211231213").phone +7 (921) 123-12-13
    .header__bottom
        .container
            a(href="#").logo
            .logo__img-wrap
                img(src="img/logos/header_logo.png" alt="cooltech logo").logo__image
                .logo__text cooltech
            .search
                form.search__form
                    input(name="srch_i" type="text" placeholder="Что будем искать").search__form-input
                    input(name="srch_s" type="submit" value="Найти").search__form-submit
            .menu
                - var items = ["Карта проезда", "История заказов", "Корзина"]
                ul.menu__list
                    each item in items
                        li.menu__item
                            a(href="#").menu__link= item