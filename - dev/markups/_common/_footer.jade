footer.footer
    .footer__top
        .container
            .footer__left
                a(href="#").logo.logo__footer
                .logo__img-wrap
                    img(src="img/logos/footer_logo.png" alt="cooltech logo").logo__image
                    .logo__text Cooltech
            .footer__right
                ul.socials.socials__footer
                    - var items = ["fb", "vk", "tw"]
                    each item in items
                        li(class="socials__item socials__item_" + item)
                            a(href="#").socials__link= item
                ul.footer__nav
                    -var items = ["Планшеты", "Мобильные телефоны", "Мр3 плееры", "Персональные компьютеры", "Ноутбуки", "Аксессуары", "Бытовая техника"]
                    each item in items
                        li.footer__nav-item
                            a(href="#").footer__nav-link= item
    .footer__bottom
        .container
            .footer__copyright All rights reserved. 2015. No copy allowed!